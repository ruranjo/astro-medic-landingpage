---
export interface Stat {
  label: string;
  value: string;
}

export interface Props {
  stats: Stat[];
  headline: string;
  description: string;
  cta: string;
}

const { stats, headline, description, cta } = Astro.props;
---

<section class="bg-gray-50 py-12 px-6">
  <div class="max-w-6xl mx-auto text-center">
    <!-- Stats Section -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
      {stats.map((stat, index) => (
        <div class="flex flex-col items-center">
          <p class="text-3xl font-bold text-primary-dark">{stat.value}</p>
          <p class="text-gray-600">{stat.label}</p>
        </div>
      ))}
    </div>

    <!-- Call to Action Section -->
    <div>
      <h2 class="text-2xl md:text-3xl font-bold text-primary-dark">{headline}</h2>
      <p class="text-gray-600 mt-4">{description}</p>
      <button 
        class="mt-6 bg-primary-dark text-white px-6 py-2 rounded-lg hover:bg-primary-light transition"
      >
        {cta}
      </button>
    </div>
  </div>
</section>
