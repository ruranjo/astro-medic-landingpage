---
const links = [
  { href: "#hero-section", label: "Inicio" },
  { href: "#community-benefits", label: "Beneficios" },
  { href: "#about-us", label: "Sobre Nosotros" },
  { href: "#course-steps", label: "Pasos del Curso" },
  { href: "#our-courses", label: "Nuestros Cursos" },
  { href: "#faq", label: "Preguntas Frecuentes" },
  { href: "#stats", label: "Inscríbete" },
];
---

<header class="fixed top-0 left-0 w-full bg-white shadow-md z-50">
  <nav class="container mx-auto flex items-center justify-between p-4">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold">
      <span class="text-primary-dark">Salud</span><span class="text-primary">Contigo</span>
    </a>
    <!-- Menu para pantallas grandes -->
    <ul class="hidden md:flex space-x-6">
      {links.map(link => (
        <li>
          <a
            href={link.href}
            class="text-gray-600 hover:text-primary-dark transition-colors"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
    <!-- Botón hamburguesa -->
    <button
      class="block md:hidden text-gray-600 hover:text-gray-800 focus:outline-none"
      aria-label="Abrir menú"
      id="menu-button"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"
        ></path>
      </svg>
    </button>
    <!-- Menu responsive -->
    <ul
      class="absolute top-16 left-0 w-full bg-white shadow-md space-y-2 p-4 hidden md:hidden"
      id="mobile-menu"
    >
      {links.map(link => (
        <li>
          <a
            href={link.href}
            class="block text-gray-600 hover:text-primary-dark transition-colors"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script>
  const menuButton = document.getElementById("menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  menuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
